{% extends 'reset_password/base-reset.html.twig' %}

{% set pageTitle = 'Reset your password' %}

{% block content %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
     <div class="authincation h-100">
        <div class="container h-100">
            <div class="row justify-content-center h-100 align-items-center">
                <div class="col-md-6">
                    <div class="authincation-content">
                        <div class="row no-gutters">
                            <div class="col-xl-12">
                                <div class="auth-form">
                                    <div class="text-center mb-3">
                                        <img src="{{ asset('images/pilane1.png')}}" alt="" width="350" height="85">
                                    </div>
                                    <h4 class="text-center mb-4">Restartirajte lozinku</h4>

                                    {{ form_start(requestForm) }}
                                        <div class="form-group">
                                            <div class="form-group">
                                                <label class="mb-1"><strong>Email</strong></label>
                                                {{ form_row(requestForm.email,{'attr': {'class': 'form-control'}, 'label': false}) }}
                                            </div>
                                            <div>
                                                <small>
                                                    Unesite email adresu a mi ćemo vam poslati link za ponovno postavljanje lozinke.
                                                </small>
                                            </div>
                                        </div>
                                        <div class="text-center">
                                            <button class="btn btn-primary btn-block">Pošalji mail za ponovno postavljanje</button>
                                        </div>
                                    {{ form_end(requestForm) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
