    <div class="row">
        <div class="col-xl-12 col-lg-12">
            <div class="form-head d-flex mb-3 mb-md-5 align-items-start flex-wrap">
                <div class="me-auto">
                    <h3 class="font-w600 mb-0 fs-22 mb-2">
                        <span class="text-black">Uredi vozilo</span>
                    </h3>
                </div>
            </div>

            {{ form_start(form) }}
                <div class="basic-form">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Dodavanje novog vozila</h4>
                        </div>
                        <div class="card-body">
                            <label class="mb-1"><strong>Vrsta vozila</strong></label>
                            {{ form_widget(form.type, {'attr': {'class': 'form-control', 'placeholder': 'Ime proizvoda'}}) }}
                            <br>
                            <label class="mb-1"><strong>Model</strong></label>
                            {{ form_widget(form.model, {'attr': {'class': 'form-control', 'placeholder': 'Ime proizvoda'}}) }}
                            <br>
                            <label class="mb-1"><strong>Registracija vozila</strong></label>
                            {{ form_widget(form.registrationNumber, {'attr': {'class': 'form-control', 'placeholder': 'Ime proizvoda'}}) }}
                            <br>
                            <label class="mb-1"><strong>Cijena</strong></label>
                            {{ form_widget(form.price, {'attr': {'class': 'form-control', 'placeholder': 'Ime proizvoda'}}) }}
                            <br>
                            <label class="mb-1"><strong>Kapacitet vozila</strong></label>
                            {{ form_widget(form.capacity, {'attr': {'class': 'form-control', 'placeholder': 'Ime proizvoda'}}) }}
                            <br>
                            <label class="mb-1"><strong>Vozilo aktivno</strong></label>
                            <div class="col-sm-6 col-md-6 col-lg-4">
                                <div class="form-check">
                                    {{ form_row(form.available, {'attr': {'class': 'form-check-input'}, 'label': false  }) }}
                                    <label class="form-check-label">Aktivno</label>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer d-sm-flex justify-content-between align-items-center">
                            <div class="card-footer-link mb-4 mb-sm-0"></div>
                            <button id="submit-button" type="submit" class="btn btn-primary">Uredi</button>
                        </div>
                        <div class="hidden">
                            {{ form_rest(form) }}
                        </div>
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
